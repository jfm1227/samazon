<header>
  <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm samazon-header-container">
    <%= link_to root_path do %>
      <%= image_tag "/images/logo.jpg" %>
    <% end %>

    <%= form_with url: products_path, method: :get, local: true, class: 'form-inline' do |f| %>
      <div class="form-group">
        <%= f.text_field :keyword, class: 'form-control samazon-header-search-input' %>
      </div>
      <div class="input-group">
        <%= f.button type: :submit, class: 'btn samazon-header-search-button' do %>
          <i class="fas fa-search samazon-header-search-icon"></i>
        <% end %>
      </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto mr-5 mt-2">
        <li class="nav-item mr-5">
          <%= link_to cart_users_path, class: "nav-link" do %>
            <i class="fas fa-shopping-cart"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
